                            description="topic list" />
                        <item id="node-subscribers" name="Subscribers"
                            url="subscribers.jsp"
                            description="node subscribers" />
                    </sidebar>
                </item>
                <item id="node-create" name="Create New Topic"
                      url="topic-create.jsp"
                      description="ccc"/>
            </sidebar>
        </tab>
