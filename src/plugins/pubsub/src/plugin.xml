<?xml version="1.0" encoding="UTF-8"?>
<plugin>

    <!-- Main plugin class -->
    <class>com.lulu.openfire.plugin.PubSubPlugin</class>
    
    <!-- Plugin meta-data -->
    <name>PubSub</name>
    <description>pubsub service manage</description>
    <author>Mark Liu</author>
    <version>1.0.0</version>
    <date>12/1/2012</date>
    <minServerVersion>3.7.0</minServerVersion>   

    <!-- UI extension -->
